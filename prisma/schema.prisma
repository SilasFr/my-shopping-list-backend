// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String? 
  provider String? 
  sessions Session[]
  lists List[]

  @@map("users")
}

model Session {
  id Int @id @default(autoincrement())
  token String @unique
  user User @relation(fields: [userId], references: [id])
  userId Int 

  @@map("sessions")
}

model List {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  listId Int?

  @@map("lists")
}


